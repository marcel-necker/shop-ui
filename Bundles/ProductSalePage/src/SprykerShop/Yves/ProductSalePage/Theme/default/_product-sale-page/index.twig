{% block breadcrumbItems %}
    <li><a href="/">{{ 'global.home' | trans }}</a></li>
    <li><a href="{{ url(_view.filterPath) }}">{{ 'catalog.sale' | trans }}</a></li>
    {% if _view.category %}
        {% include '@CatalogPage/_partials/category-breadcrumb.twig' with {categoryNode: _view.category, filterPath: _view.filterPath} only %}
    {% endif %}
{% endblock %}

{% block title %}
    <h3>
        {% if _view.category %}
            {{ _view.category.name }}
        {% else %}
            {{ 'catalog.sale' | trans }}
        {% endif %}
    </h3>
{% endblock %}

{% block content %}
    {% include "@CatalogPage/_partials/catalog.twig" with {paginationPath: app.request.attributes.get('_route')} %}
{% endblock %}
