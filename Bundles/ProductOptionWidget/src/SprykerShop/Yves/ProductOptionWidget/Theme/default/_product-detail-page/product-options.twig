{% if _widget.productOptionGroups|length > 0  %}
    <div class="callout">
        <h5>{{ 'product.product_options' | trans }}</h5>
        {% for productOptionGroup in _widget.productOptionGroups %}
            <label>{{ productOptionGroup.name | trans }}
                <select name="product-option[{{ productOptionGroup.name }}]">
                    <option value="0">
                        {{ 'None' | trans }}
                    </option>

                    {% for productOptionValue in productOptionGroup.productOptionValues %}
                        <option value="{{ productOptionValue.idProductOptionValue }}">
                            {{ productOptionValue.value|trans }} {{ productOptionValue.price | money }}
                        </option>
                    {% endfor %}

                </select>
            </label>
        {% endfor %}
    </div>
{% endif %}
