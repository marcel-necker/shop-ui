{% extends model('component') %}

{% set name = 'label' %}
{% set text = data.text | default('') %}
{% set required = data.required | default(false) %}

{% block body %}
    {% block widget %}
        {% if widget %}{{ widget | raw }}{% endif %}
    {% endblock %}

    {{ text }}
{% endblock %}

{% block component %}
    {% if required %}
        {% set modifiers = modifiers | merge(['required']) %}
    {% endif %}

    {{parent()}}
{% endblock %}
