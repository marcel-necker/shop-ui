{% extends model('component') %}

{% set name = 'radio' %}
{% set value = data.value | default(null) %}
{% set checked = data.checked | default(false) %}

{% block body %}
    <label>
        <input
                type="radio"
                class="{{name}}__input"
                {%- if value is not null %} value="{{value}}"{% endif -%}
                {%- if checked %} checked="checked"{% endif -%}
                {%- block widgetAttributes %}{% endblock -%} />

        <span class="{{name}}__circle"></span>
    </label>
{% endblock %}
