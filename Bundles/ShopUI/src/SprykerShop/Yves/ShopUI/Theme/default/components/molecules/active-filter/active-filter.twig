{% extends model('component') %}

{% set config = {
    name: 'active-filter',
    tag: 'a'
} | merge(config | default({})) %}

{% set data = {
    filter: data.filter,
    value: data.value | default(null)
} | merge(data | default({})) %}

{% block component %}
    {% if data.value is not empty %}
        {{parent()}}
    {% endif %}
{% endblock %}

{% block class %}
    {{parent()}}
    link link--small
{% endblock %}

{% block attributes %}
    {{parent()}}
    href="{{ generateUrlWithoutActiveSearchFilter(data.filter, data.value) }}"
{% endblock %}

{% block body %}
    <strong>{{data.value}}</strong>
    {{ ('product.filter.' ~ data.filter.name) | trans }}
    &times;
{% endblock %}
