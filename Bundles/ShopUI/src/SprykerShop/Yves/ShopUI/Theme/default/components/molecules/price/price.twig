{% extends model('component') %}

{% set config = {
    name: 'price',
    tag: 'span'
} | merge(config | default({})) %}

{% set data = {
    amount: data.amount,
    originalAmount: data.originalAmount | default(null)
} | merge(data | default({})) %}

{% block body %}
    {% if data.originalAmount -%}
        <span class="stat {{config.name}}__amount {{config.name}}__amount--original">{{data.originalAmount}}</span>
    {%- endif -%}
    <span class="stat {{config.name}}__amount {{config.name}}__amount--default">{{data.amount}}</span>
{% endblock %}

