{% extends "@CustomerPage/layout.twig" %}

{% block title %}
    <h3>{{ 'customer.account.profile_data' | trans }}</h3>
{% endblock %}

{% block customerNavigation %}
    {% include "@CustomerPage/partials/navigation.twig" with {'active': 'profile'} %}
{% endblock %}

{% block customerContent %}
    <div class="row xlarge-unstack">
        <div class="columns">
            <div class="callout">
                {% include "@CustomerPage/profile/partials/profile-form.twig" %}
            </div>
        </div>

        <div class="columns">
            <div class="callout">
                {% include "@CustomerPage/profile/partials/password-form.twig" %}
            </div>
        </div>
    </div>

    <div class="row xlarge-unstack">
        <div class="columns">
            <div class="callout">
                {% include "@CustomerPage/profile/partials/delete-form.twig" %}
            </div>
        </div>

        <div class="columns"></div>
    </div>
{% endblock %}
