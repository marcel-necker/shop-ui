<div class="row">
    <div class="small-12 large-6 columns">
        <div class="callout">
            <h5>{{ 'customer.order.shipping_address' | trans }}</h5>
            <div>{{ _view.order.shippingAddress.firstName }} {{ _view.order.shippingAddress.lastName }}</div>
            <div>{{ _view.order.shippingAddress.address1 }} {{ _view.order.shippingAddress.address2 }}</div>
            {% if _view.order.shippingAddress.address3 %}
                <div>{{ _view.order.shippingAddress.address3 }}</div>
            {% endif %}
            <div>{{ _view.order.shippingAddress.zipCode }} {{ _view.order.shippingAddress.city }}</div>
            <div>{{ ('countries.iso.' ~ _view.order.shippingAddress.iso2Code) | trans }}</div>
        </div>
    </div>

    <div class="small-12 large-6 columns">
        <div class="callout">
            <h5>{{ 'customer.order.billing_address' | trans }}</h5>
            <div>{{ _view.order.billingAddress.firstName }} {{ _view.order.billingAddress.lastName }}</div>
            <div>{{ _view.order.billingAddress.address1 }} {{ _view.order.billingAddress.address2 }}</div>
            {% if _view.order.billingAddress.address3 %}
                <div>{{ _view.order.billingAddress.address3 }}</div>
            {% endif %}
            <div>{{ _view.order.billingAddress.zipCode }} {{ _view.order.billingAddress.city }}</div>
            <div>{{ ('countries.iso.' ~ _view.order.billingAddress.iso2Code) | trans }}</div>
        </div>
    </div>

    <div class="small-12 large-6 columns">
        <div class="callout">
            <h5>{{ 'customer.order.shipment_method' | trans }}</h5>
            <p>
                {% for shipmentMethod in _view.order.shipmentMethods %}
                    {{ shipmentMethod.name }} <br />
                {% endfor %}
            </p>
        </div>
    </div>
</div>
